<style>
    .internal-links {
        background: var(--card-bg);
        padding: 50px 0;
        border-top: 1px solid var(--border);
    }
    .internal-links h2 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 1.5rem;
    }
    .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
    }
    .link-category h3 {
        font-size: 1rem;
        margin-bottom: 15px;
        color: var(--primary);
    }
    .link-category ul {
        list-style: none;
        padding: 0;
    }
    .link-category li {
        padding: 8px 0;
        border-bottom: 1px solid var(--border);
        font-size: 14px;
    }
    .link-category li:last-child {
        border-bottom: none;
    }
    .link-category a {
        color: var(--text);
    }
    .link-category a:hover {
        color: var(--primary);
    }
    .seo-text {
        margin-top: 40px;
        padding: 20px;
        background: var(--bg);
        border-radius: 8px;
    }
    .seo-text p {
        font-size: 14px;
        color: var(--text-light);
        line-height: 1.8;
    }
    .seo-text a {
        color: var(--primary);
        text-decoration: underline;
    }
</style>