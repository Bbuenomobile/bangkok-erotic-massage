                        {fullListing.address && (
                            <div class="location-info">
                                <h4>üìç Location</h4>
                                <p itemprop="streetAddress">{fullListing.address}</p>
                                <p>Bangkok, Thailand</p>
                            </div>
                        )}
                    </div>
                    
                    <div class="view-original">
                        <a href={listing.url} target="_blank" rel="noopener" class="btn-primary">
                            View Full Profile on ErotikMaps ‚Üí
                        </a>
                    </div>
                    
                    <!-- Quick Links -->
                    <div class="quick-links">
                        <h4>Quick Links</h4>
                        <ul>
                            <li><a href="/">‚Üê All Erotic massage in Bangkok</a></li>
                            <li><a href="/#faq">Frequently Asked Questions</a></li>
                            <li><a href="/#premium">Premium Listings</a></li>
                        </ul>
                    </div>
                </aside>
            </div>
            
            <!-- Similar Listings -->
            {similarListings.length > 0 && (
                <section class="similar-listings">
                    <h2>Similar Erotic massage in Bangkok</h2>
                    <p>Discover other venues that might interest you:</p>
                    <div class="listings-grid small">
                        {similarListings.map((l: any) => (
                            <ListingCard listing={l} />
                        ))}
                    </div>
                    <p class="view-all">
                        <a href="/" class="btn-secondary">View All {total} Listings ‚Üí</a>
                    </p>
                </section>
            )}
        </div>
    </article>
    
    <!-- Schema.org LocalBusiness -->
