        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": listing.name,
        "image": listing.thumbnail,
        "url": canonicalUrl,
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Bangkok",
            "addressCountry": "Thailand"
        },
        ...(fullListing.phone && { "telephone": fullListing.phone }),
        ...(fullListing.email && { "email": fullListing.email }),
